# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_id_here

# Database Configuration
# For SQLite (local): leave DATABASE_URL empty
# For PostgreSQL (production): postgresql://user:pass@host:port/dbname
DATABASE_URL=

# Workplace Location (GPS coordinates)
WORKPLACE_LAT=40.4093
WORKPLACE_LON=49.8671
WORKPLACE_RADIUS_M=100

# Geocoding Configuration (Reverse Geocoding for Addresses)
# Enable/disable address lookup from coordinates
GEOCODING_ENABLED=false

# Provider: nominatim (free, 1 req/sec) or photon (self-hosted, fast)
GEOCODING_PROVIDER=nominatim

# Custom URL for Photon or other provider (optional)
# Example: http://localhost:2322 for local Photon server
GEOCODING_URL=

# Timeout for geocoding requests (seconds)
GEOCODING_TIMEOUT_SEC=3

# Rate limit (requests per second) - CRITICAL for Nominatim (max 1)
GEOCODING_RPS=1.0

# Cache TTL (seconds) - how long to cache address results
GEOCODING_CACHE_TTL_SEC=86400

# User-Agent for Nominatim (required by their policy)
GEOCODING_USER_AGENT=tgbotcuk/2.0 (attendance bot; contact: your@email.com)
